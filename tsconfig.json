{
  "compilerOptions": {
    // Module Resolution (critical for React)
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    // React
    "jsx": "preserve",
    // Module handling
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    // Build outputs (not needed for most React setups, but harmless)
    "noEmit": true, // Let your bundler handle compilation
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    // Strict type checking (keep your good settings!)
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    // Optional style options (uncomment if you want them)
    // "noImplicitReturns": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // Performance & compatibility
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedSideEffectImports": true,
    "allowJs": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "src",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
